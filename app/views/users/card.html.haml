.card-header
  = render "products/product_header"
  - breadcrumb :users
  = render "layouts/bread_with_gretel"

= render "layouts/notifications"

.card-wrapper.clreafix
  .card-main
    %h2.card-main__header 支払い方法
    .card-main__container
      .card-main__container__upper
        .card-main__container__upper--title
          %h3 クレジットカード一覧
      - if @token.present?
        .card-main__container__main
          %ul.product__buy__container__credit__inner__text__list
            %li
            .product__buy__container__credit__inner__text__list--num
              = ("***********" + @cards.last4)
            .product__buy__container__credit__inner__text__list--exp
              = "#{@cards.exp_month}/ #{@cards.exp_year}"
            .product__buy__container__credit__inner__text--list--brand
              = @cards.brand
            .product__buy__container__credit__inner__text--list--btn
              = link_to '削除する'

      - else
        .card-main__container__main
          .card-main__container__main__btn
            = link_to 'クレジットカードを追加する',{ controller: :users, action: :paycreate }, class: "btn-default card-main__container__main__btn--red"
      .card-main__container__footer
        = link_to "#",class: "card-main__container__footer--link" do
          支払い方法について
  .card-side
    = render 'users/mypage-nav'
